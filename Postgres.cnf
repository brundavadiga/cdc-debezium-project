# PostgreSQL configuration
listen_addresses = '*'
max_connections = 100
shared_buffers = 128MB
dynamic_shared_memory_type = posix
max_wal_size = 1GB
min_wal_size = 80MB
log_timezone = 'UTC'
datestyle = 'iso, mdy'
timezone = 'UTC'
# Replication settings for Debezium
wal_level = logical
max_wal_senders = 10
max_replication_slots = 10
